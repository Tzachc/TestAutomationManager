<Window x:Class="TestAutomationManager.Dialogs.AddTestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add New Test" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Input Field Style -->
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="24,20">
            <StackPanel>
                <TextBlock Text="➕ Create New Test" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Fill in the test details and configure ExtTable settings" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Padding="24,20">
                <StackPanel>
                    <!-- Test ID Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="16"
                           Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="TEST ID" Style="{StaticResource InputLabel}"/>

                            <!-- ID Mode Toggle -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <RadioButton x:Name="AutoIdRadio" 
                                           Grid.Column="0"
                                           IsChecked="True"
                                           GroupName="IdMode"
                                           Checked="AutoIdRadio_Checked">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🤖" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Auto-select ID" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>

                                <RadioButton x:Name="ManualIdRadio" 
                                           Grid.Column="1"
                                           GroupName="IdMode"
                                           Checked="ManualIdRadio_Checked">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✏️" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Set ID" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                            </Grid>

                            <!-- ID Input/Display -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="TestIdTextBox" 
                                       Grid.Column="0"
                                       Style="{StaticResource InputTextBox}"
                                       IsReadOnly="True"
                                       Text="3"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       TextAlignment="Center"
                                       TextChanged="TestIdTextBox_TextChanged"/>

                                <!-- Suggested ID Info with Gaps Button -->
                                <Border x:Name="SuggestedIdInfo"
                                       Grid.Column="1"
                                       Background="{DynamicResource StatusDefaultBackgroundBrush}"
                                       CornerRadius="4"
                                       Padding="10,8"
                                       Margin="8,0,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" FontSize="11" 
                                                 Foreground="{DynamicResource SuccessBrush}"
                                                 VerticalAlignment="Center">
                                            <Run Text="✓ Free:"/>
                                            <Run x:Name="SuggestedIdRun" Text="3" FontWeight="Bold"/>
                                            <Run x:Name="GapFoundText" Text="(gap found)"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Real-time Validation Message -->
                                <Border x:Name="ValidationMessage"
                                       Grid.Column="1"
                                       Background="{DynamicResource StatusErrorBackgroundBrush}"
                                       CornerRadius="4"
                                       Padding="10,8"
                                       Margin="8,0,0,0"
                                       Visibility="Collapsed">
                                    <TextBlock x:Name="ValidationMessageText"
                                             FontSize="11"
                                             Foreground="{DynamicResource ErrorBrush}">
                                        <Run Text="✗"/>
                                        <Run x:Name="ValidationTextRun" Text="Test ID already exists!"/>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Test Details Section -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="16"
                           Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="TEST DETAILS" Style="{StaticResource InputLabel}" Margin="0,0,0,12"/>

                            <!-- Test Name -->
                            <TextBlock Text="Name *" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="TestNameTextBox" 
                                   Style="{StaticResource InputTextBox}"
                                   Margin="0,0,0,12"/>

                            <!-- Description -->
                            <TextBlock Text="Description" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="DescriptionTextBox" 
                                   Style="{StaticResource InputTextBox}"
                                   Height="60"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"
                                   Margin="0,0,0,12"/>

                            <!-- Category - Clickable Row -->
                            <TextBlock Text="Category" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,0,0,4"/>
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="CategoryBorder_MouseLeftButtonDown">
                                <ComboBox x:Name="CategoryComboBox"
                                        IsEditable="True"
                                        FontSize="13"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="10,8">
                                    <ComboBoxItem>Radzen</ComboBoxItem>
                                    <ComboBoxItem>SCMM</ComboBoxItem>
                                    <ComboBoxItem>SCMM Funds</ComboBoxItem>
                                    <ComboBoxItem>WEB1</ComboBoxItem>
                                    <ComboBoxItem>WEB2</ComboBoxItem>
                                    <ComboBoxItem>Mobile1</ComboBoxItem>
                                    <ComboBoxItem>Mobile2</ComboBoxItem>
                                    <ComboBoxItem>Liquidation</ComboBoxItem>
                                    <ComboBoxItem>Limits Monitor</ComboBoxItem>
                                    <ComboBoxItem>Calculation</ComboBoxItem>
                                    <ComboBoxItem>Payments1</ComboBoxItem>
                                    <ComboBoxItem>Payments2</ComboBoxItem>
                                    <ComboBoxItem>Compliance</ComboBoxItem>
                                    <ComboBoxItem>API</ComboBoxItem>
                                    <ComboBoxItem>Appium</ComboBoxItem>
                                    <ComboBoxItem>IOS</ComboBoxItem>
                                </ComboBox>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- ExtTable Configuration -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <TextBlock Text="EXTTABLE CONFIGURATION" Style="{StaticResource InputLabel}" Margin="0,0,0,12"/>

                            <!-- ExtTable Source Toggle -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <RadioButton x:Name="TemplateExtRadio" 
                                           Grid.Column="0"
                                           IsChecked="True"
                                           GroupName="ExtMode"
                                           Checked="TemplateExtRadio_Checked">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📋" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Use Template" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>

                                <RadioButton x:Name="CopyExtRadio" 
                                           Grid.Column="1"
                                           GroupName="ExtMode"
                                           Checked="CopyExtRadio_Checked">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📑" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Copy From Test" FontSize="12" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </RadioButton>
                            </Grid>

                            <!-- Template Info -->
                            <Border x:Name="TemplateInfo"
                                   Background="{DynamicResource SecondaryBackgroundBrush}"
                                   CornerRadius="6"
                                   Padding="12">
                                <StackPanel>
                                    <TextBlock FontSize="12" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             Margin="0,0,0,4">
                                        <Run Text="Will copy structure from:"/>
                                        <Run Text="ExtTable1" FontWeight="Bold" Foreground="{DynamicResource PrimaryBlueBrush}"/>
                                    </TextBlock>
                                    <TextBlock Text="This is the default template table" 
                                             FontSize="11" 
                                             Foreground="{DynamicResource TextTertiaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Copy From Test Selector -->
                            <Grid x:Name="CopyFromPanel" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Search Box -->
                                <Border Grid.Row="0" Margin="0,0,0,8">
                                    <TextBox x:Name="ExtTableSearchBox"
                                           Style="{StaticResource InputTextBox}">
                                        <TextBox.Template>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="4">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                    Margin="{TemplateBinding Padding}"/>
                                                        <TextBlock x:Name="Placeholder"
                                                                 Text="🔍 Search ExtTables..."
                                                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                                                 Margin="10,8"
                                                                 IsHitTestVisible="False"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </TextBox.Template>
                                    </TextBox>
                                </Border>

                                <!-- ExtTable List -->
                                <Border Grid.Row="1"
                                       Background="{DynamicResource SecondaryBackgroundBrush}"
                                       BorderBrush="{DynamicResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="6"
                                       MaxHeight="150">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="ExtTablesList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="ExtTableSelection"
                                                               Tag="{Binding TableName}"
                                                               Margin="8,4"
                                                               Checked="ExtTableSelection_Checked">
                                                        <Grid Width="400">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Test ID Badge -->
                                                            <Border Grid.Column="0"
                                                                   Width="24" Height="24"
                                                                   Background="{DynamicResource PrimaryBlueBrush}"
                                                                   CornerRadius="4"
                                                                   Margin="0,0,8,0">
                                                                <TextBlock Text="{Binding TestId}" 
                                                                         FontSize="11"
                                                                         FontWeight="Bold"
                                                                         Foreground="White"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                                            </Border>

                                                            <!-- Table Name -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding TableName}" 
                                                                         FontSize="12"
                                                                         FontWeight="SemiBold"
                                                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                <TextBlock Text="{Binding TestName}" 
                                                                         FontSize="10"
                                                                         Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                            </StackPanel>

                                                            <!-- Row Count -->
                                                            <Border Grid.Column="2"
                                                                   Background="{DynamicResource CardBackgroundBrush}"
                                                                   CornerRadius="4"
                                                                   Padding="6,4">
                                                                <TextBlock FontSize="10"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}">
                                                                    <Run Text="{Binding RowCount}"/>
                                                                    <Run Text="rows"/>
                                                                </TextBlock>
                                                            </Border>
                                                        </Grid>
                                                    </RadioButton>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="24,16">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock x:Name="StatusMessage"
                             FontSize="12"
                             Foreground="{DynamicResource TextTertiaryBrush}"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton"
                           Content="Cancel"
                           Style="{StaticResource SecondaryButton}"
                           Width="100"
                           Margin="0,0,8,0"
                           Click="CancelButton_Click"/>

                    <Button x:Name="CreateButton"
                           Content="Create Test"
                           Style="{StaticResource PrimaryButton}"
                           Width="120"
                           Click="CreateButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Gaps Popup -->
        <Popup x:Name="GapsPopup"
               PlacementTarget="{Binding ElementName=ShowGapsButton}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource PrimaryBlueBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="4" 
                                    BlurRadius="12" 
                                    Opacity="0.3"/>
                </Border.Effect>
                <StackPanel MinWidth="200" MaxWidth="300">
                    <TextBlock Text="📊 Available Gap IDs" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="GapsListText"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>

                    <TextBlock FontSize="10"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               TextWrapping="Wrap"
                               FontStyle="Italic"
                               Text="💡 Click on any gap ID to use it"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
