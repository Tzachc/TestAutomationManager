<Window x:Class="TestAutomationManager.Dialogs.RenameColumnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Column"
        Width="480"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="20,0,20,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
            BorderBrush="{DynamicResource PrimaryBlueBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.5" 
                            BlurRadius="20" 
                            ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel VerticalAlignment="Center" Margin="24,0,0,0">
                        <TextBlock Text="Rename Column"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Enter a new name for this column"
                                 FontSize="11"
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="32" Height="32"
                            Margin="0,14,14,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <TextBlock Text="✕" 
                                 FontSize="16" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="24,24,24,24">

                    <!-- Current Name Section -->
                    <TextBlock Text="Current name:"
                             FontSize="12"
                             FontWeight="Medium"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,0,0,6"/>

                    <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                           BorderBrush="{DynamicResource BorderBrush}"
                           BorderThickness="1"
                           CornerRadius="6"
                           Padding="12,10,12,10"
                           Margin="0,0,0,20">
                        <TextBlock x:Name="CurrentNameText"
                                 FontSize="14"
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </Border>

                    <!-- New Name Section -->
                    <TextBlock Text="New name:"
                             FontSize="12"
                             FontWeight="Medium"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Margin="0,0,0,6"/>

                    <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                           BorderBrush="{DynamicResource PrimaryBlueBrush}"
                           BorderThickness="2"
                           CornerRadius="6"
                           Margin="0,0,0,0">
                        <TextBox x:Name="NewNameTextBox"
                               Background="Transparent"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               BorderThickness="0"
                               FontSize="14"
                               Padding="12,10,12,10"
                               VerticalContentAlignment="Center"
                               TextChanged="NewNameTextBox_TextChanged"
                               KeyDown="NewNameTextBox_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="CaretBrush" Value="{DynamicResource PrimaryBlueBrush}"/>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <Border Grid.Row="2"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="0,0,12,12"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,1,24,10">
                <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right">

                    <!-- Cancel Button -->
                    <Button Content="Cancel"
                          Style="{StaticResource ModernButton}"
                          Background="Transparent"
                          Foreground="{DynamicResource TextSecondaryBrush}"
                          BorderBrush="{DynamicResource BorderBrush}"
                          BorderThickness="1"
                          Margin="0,0,12,0"
                          Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                       Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="6"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Save Button -->
                    <Button x:Name="SaveButton"
                          Content="💾 Save Changes"
                          Style="{StaticResource ModernButton}"
                          Background="{DynamicResource PrimaryBlueBrush}"
                          Foreground="White"
                          Click="SaveButton_Click"
                          IsEnabled="False"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>