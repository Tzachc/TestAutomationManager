<mah:MetroWindow x:Class="TestAutomationManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:stats="clr-namespace:TestAutomationManager.Services.Statistics"        mc:Ignorable="d"
        Title="Test Automation Manager" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        BorderBrush="{DynamicResource BorderBrush}"
        BorderThickness="1"
        TitleCharacterCasing="Normal"
        GlowBrush="{DynamicResource PrimaryBlueBrush}"
        ShowTitleBar="True"
        TitleBarHeight="48"
        NonActiveWindowTitleBrush="{DynamicResource SecondaryBackgroundBrush}"
        WindowTitleBrush="{DynamicResource SecondaryBackgroundBrush}"
        TitleForeground="{DynamicResource TextPrimaryBrush}"
        ResizeMode="CanResize">

    <!-- Add Resources for ExtTables -->
    <mah:MetroWindow.Resources>
        <!-- Expandable Navigation Item Style -->
        <Style x:Key="ExpandableNavItem" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,10"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Child Navigation Item Style -->
        <Style x:Key="ChildNavItem" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="32,1,0,1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Elevated visual treatments -->
        <DropShadowEffect x:Key="SoftCardShadow" Color="{DynamicResource CardShadowColor}"
                          BlurRadius="22" ShadowDepth="0" Opacity="0.35" x:Shared="False"/>
        <DropShadowEffect x:Key="SoftPillShadow" Color="{DynamicResource CardShadowColor}"
                          BlurRadius="18" ShadowDepth="0" Opacity="0.28" x:Shared="False"/>

        <Style x:Key="SidebarCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect" Value="{StaticResource SoftCardShadow}"/>
        </Style>

        <Style x:Key="MetricChip" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource AccentPillBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentPillBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="Effect" Value="{StaticResource SoftPillShadow}"/>
        </Style>

        <Style x:Key="QuickMetricCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Effect" Value="{StaticResource SoftCardShadow}"/>
        </Style>

        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </mah:MetroWindow.Resources>

    <!-- 🎨 CUSTOM TITLE BAR -->
    <mah:MetroWindow.TitleTemplate>
        <DataTemplate>
            <Grid Height="48" Background="{DynamicResource SecondaryBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 💎 LEFT: App Title Only -->
                <StackPanel Grid.Column="0" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center"
                       Margin="20,0,0,0">
                    <TextBlock Text="Test Automation Manager" 
                         FontSize="14" 
                         FontWeight="SemiBold" 
                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>

                <!-- 🎯 CENTER: Test Status Overview - LIVE DATA -->
                <StackPanel Grid.Column="1"
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       DataContext="{x:Static stats:TestStatisticsService.Instance}">
                    <!-- Active Badge -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}"
                       BorderThickness="1"
                       CornerRadius="6"
                       Padding="10,5"
                       Margin="6,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                Fill="{DynamicResource PrimaryBlueBrush}" 
                                Margin="0,0,8,0"/>
                            <TextBlock FontSize="11" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 FontWeight="Medium">
                            <Run Text="{Binding ActiveCount, Mode=OneWay}"/>
                            <Run Text=" Active"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Passed Badge -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}"
                       BorderThickness="1"
                       CornerRadius="6"
                       Padding="10,5"
                       Margin="6,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                Fill="{DynamicResource SuccessBrush}" 
                                Margin="0,0,8,0"/>
                            <TextBlock FontSize="11" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 FontWeight="Medium">
                            <Run Text="{Binding PassedCount, Mode=OneWay}"/>
                            <Run Text=" Passed"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Failed Badge -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}"
                       BorderThickness="1"
                       CornerRadius="6"
                       Padding="10,5"
                       Margin="6,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                Fill="{DynamicResource ErrorBrush}" 
                                Margin="0,0,8,0"/>
                            <TextBlock FontSize="11" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 FontWeight="Medium">
                            <Run Text="{Binding FailedCount, Mode=OneWay}"/>
                            <Run Text=" Failed"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Running Badge -->
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderBrush}"
                       BorderThickness="1"
                       CornerRadius="6"
                       Padding="10,5"
                       Margin="6,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" 
                                Fill="{DynamicResource WarningBrush}" 
                                Margin="0,0,8,0"/>
                            <TextBlock FontSize="11" 
                                 Foreground="{DynamicResource TextSecondaryBrush}"
                                 FontWeight="Medium">
                            <Run Text="{Binding RunningCount, Mode=OneWay}"/>
                            <Run Text=" Running"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ⚙️ RIGHT: Quick Actions -->
                <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Center"
                       Margin="0,0,120,0">

                    <!-- Settings Button -->
                    <Button Style="{StaticResource IconButton}"
                       Width="32" Height="32"
                       ToolTip="Settings"
                       Margin="4,0"
                       Click="SettingsButton_Click">
                        <TextBlock Text="⚙️" FontSize="14"/>
                    </Button>

                    <!-- Notifications Button -->
                    <Button Style="{StaticResource IconButton}" 
                       Width="32" Height="32"
                       ToolTip="Notifications"
                       Margin="4,0">
                        <Grid>
                            <TextBlock Text="🔔" FontSize="14"/>
                            <!-- Notification Badge -->
                            <Ellipse Width="8" Height="8" 
                                Fill="{DynamicResource ErrorBrush}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,-2,0"/>
                        </Grid>
                    </Button>

                    <!-- User Profile Button -->
                    <Button Style="{StaticResource IconButton}" 
                       Width="32" Height="32"
                       ToolTip="Profile"
                       Margin="4,0,8,0">
                        <Border Width="24" Height="24"
                           Background="{DynamicResource PrimaryBlueBrush}"
                           CornerRadius="12">
                            <TextBlock Text="U" 
                                 FontSize="12" 
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                        </Border>
                    </Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </mah:MetroWindow.TitleTemplate>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ambient background accents -->
        <Canvas Grid.ColumnSpan="2"
                Panel.ZIndex="0"
                IsHitTestVisible="False">
            <Ellipse Width="420" Height="420"
                     Fill="{DynamicResource AccentGlowBrush}"
                     Opacity="0.35"
                     Canvas.Left="-140" Canvas.Top="-120">
                <Ellipse.Effect>
                    <BlurEffect Radius="80"/>
                </Ellipse.Effect>
            </Ellipse>
            <Ellipse Width="360" Height="360"
                     Fill="{DynamicResource AccentGlowBrush}"
                     Opacity="0.25"
                     Canvas.Left="780" Canvas.Top="520">
                <Ellipse.Effect>
                    <BlurEffect Radius="90"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <!-- 🎨 PROFESSIONAL SIDEBAR -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarGradientBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 💎 MODERN HEADER -->
                <Border Grid.Row="0" Padding="24,28">
                    <Border Style="{StaticResource SidebarCard}" Padding="24" Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Ellipse Grid.ColumnSpan="2"
                                     Grid.RowSpan="2"
                                     Fill="{DynamicResource HeroBackdropBrush}"
                                     Opacity="0.35"
                                     Margin="-60"
                                     IsHitTestVisible="False">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="60"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <Border Grid.RowSpan="2"
                                   Width="72" Height="72"
                                   Background="{DynamicResource SecondaryBackgroundBrush}"
                                   BorderBrush="{DynamicResource BorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center">
                                <Image Source="Assets/deadpoolIcon.png"
                                       Width="42"
                                       Height="42"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1"
                                        Grid.RowSpan="2"
                                        Margin="20,0,0,0"
                                        VerticalAlignment="Center">
                                <Border Style="{StaticResource MetricChip}"
                                        Margin="0,0,0,12"
                                        Padding="12,6"
                                        HorizontalAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚡"
                                                   FontSize="14"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Automation workspace"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                                <TextBlock Text="Test Manager"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="Orchestrate, observe &amp; optimize automation coverage."
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,6,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                                        <Ellipse Width="6" Height="6"
                                                 Fill="{DynamicResource PrimaryBlueBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="Pipeline health: 97%"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="6" Height="6"
                                                 Fill="{DynamicResource SuccessBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                                        <TextBlock Text="Last sync 2 minutes ago"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>



                <!-- 🎯 NAVIGATION -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="12,8">
                    <StackPanel>
                        <Border Style="{StaticResource SidebarCard}"
                                DataContext="{x:Static stats:TestStatisticsService.Instance}">
                            <StackPanel>
                                <TextBlock Text="Today overview"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="Stay aligned with your pipeline health."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,4,0,0"/>

                                <UniformGrid Columns="2" Margin="0,16,0,0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,8,12">
                                        <Border Width="26" Height="26"
                                                Background="{DynamicResource PrimaryBlueBrush}"
                                                CornerRadius="8"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="A"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ActiveCount}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="Active"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Width="26" Height="26"
                                                Background="{DynamicResource SuccessBrush}"
                                                CornerRadius="8"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="P"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding PassedCount}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="Passed"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,8,0">
                                        <Border Width="26" Height="26"
                                                Background="{DynamicResource ErrorBrush}"
                                                CornerRadius="8"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="F"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding FailedCount}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="Failed"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="26" Height="26"
                                                Background="{DynamicResource WarningBrush}"
                                                CornerRadius="8"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="R"
                                                       FontSize="12"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding RunningCount}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="Running"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </UniformGrid>

                                <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="14"
                                        Margin="0,16,0,0">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Automation capacity"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="72%"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </Grid>
                                        <ProgressBar Value="72"
                                                     Height="6"
                                                     Margin="0,10,0,0"
                                                     Foreground="{DynamicResource PrimaryBlueBrush}"
                                                     Background="{DynamicResource HoverBackgroundBrush}"/>
                                        <TextBlock Text="Projected completion in 1h 20m"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0,18,0,0">
                                    <Button Style="{StaticResource PrimaryButton}"
                                            Content="Start new run"
                                            Padding="18,8"
                                            ToolTip="Kick off a fresh automation suite"/>
                                    <Button Style="{StaticResource SecondaryButton}"
                                            Content="View timeline"
                                            Padding="18,8"
                                            Margin="12,0,0,0"
                                            ToolTip="Open the execution calendar"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Main Section -->
                        <TextBlock Text="WORKSPACE"
                                 FontSize="10"
                                 FontWeight="SemiBold" 
                                 Foreground="{DynamicResource TextTertiaryBrush}" 
                                 Margin="8,0,0,8"/>

                        <RadioButton x:Name="TestsRadio" 
                                   GroupName="Navigation" 
                                   IsChecked="True" 
                                   Style="{StaticResource NavigationRadioButton}" 
                                   Tag="Tests" 
                                   Click="NavigationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Tests" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="Navigation" 
                                   Style="{StaticResource NavigationRadioButton}"
                                   Tag="Processes" 
                                   Click="NavigationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Processes" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="Navigation" 
                                   Style="{StaticResource NavigationRadioButton}"
                                   Tag="Functions" 
                                   Click="NavigationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Functions" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- ⭐ NEW: ExtTables Expandable Section -->
                        <Border x:Name="ExtTablesNavItem"
                                Style="{StaticResource ExpandableNavItem}"
                                MouseLeftButtonDown="ExtTablesNav_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="📊" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ExtTablesText" 
                                             Text="ExtTables" 
                                             FontSize="13" 
                                             FontWeight="Medium" 
                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                             VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Expand/Collapse Arrow -->
                                <TextBlock x:Name="ExtTablesArrow"
                                         Grid.Column="1"
                                         Text="▶" 
                                         FontSize="10"
                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                         VerticalAlignment="Center"
                                         RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform x:Name="ExtTablesArrowRotation" Angle="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- ExtTables Children (Collapsed by default) -->
                        <StackPanel x:Name="ExtTablesChildren" Visibility="Collapsed">
                            <!-- Search Box for Tables -->
                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                   BorderBrush="{DynamicResource BorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Margin="32,4,8,8"
                                   Padding="2"
                                   Effect="{StaticResource SoftCardShadow}">
                                <Grid>
                                    <TextBox x:Name="ExtTablesSearchBox"
                                           Background="Transparent"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           BorderThickness="0"
                                           FontSize="11"
                                           Padding="6,4"
                                           TextChanged="ExtTablesSearch_TextChanged"
                                           GotFocus="ExtTablesSearchBox_GotFocus"
                                           LostFocus="ExtTablesSearchBox_LostFocus"/>

                                    <!-- Placeholder Text -->
                                    <TextBlock x:Name="ExtTablesSearchPlaceholder"
                                             Text="🔍 Search tables..."
                                             Foreground="{DynamicResource TextTertiaryBrush}"
                                             FontSize="11"
                                             Padding="6,4"
                                             IsHitTestVisible="False"
                                             Visibility="Visible"/>
                                </Grid>
                            </Border>

                            <!-- Tables Count Badge -->
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                   BorderBrush="{DynamicResource BorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="10,6"
                                   Margin="32,2,8,6"
                                   Effect="{StaticResource SoftCardShadow}">
                                <TextBlock FontSize="10" 
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         HorizontalAlignment="Center">
                                    <Run x:Name="ExtTablesCountRun" Text="0"/>
                                    <Run Text=" tables found"/>
                                </TextBlock>
                            </Border>

                            <!-- Scrollable Tables List -->
                            <ScrollViewer MaxHeight="300" 
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="ExtTablesItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ChildNavItem}"
                                                    MouseLeftButtonDown="ExtTableItem_Click"
                                                    Tag="{Binding TableName}"
                                                    ToolTip="{Binding TestName}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Test ID Badge -->
                                                    <Border Grid.Column="0"
                                                           Width="18" Height="18"
                                                           Background="{DynamicResource PrimaryBlueBrush}"
                                                           CornerRadius="3"
                                                           Margin="0,0,6,0">
                                                        <TextBlock Text="{Binding TestId}" 
                                                                 FontSize="9"
                                                                 FontWeight="Bold"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Table Name -->
                                                    <TextBlock Grid.Column="1"
                                                             Text="{Binding TableName}" 
                                                             FontSize="11"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             VerticalAlignment="Center"
                                                             TextTrimming="CharacterEllipsis"/>

                                                    <!-- Row Count Badge -->
                                                    <Border Grid.Column="2"
                                                           Background="{DynamicResource SecondaryBackgroundBrush}"
                                                           CornerRadius="3"
                                                           Padding="4,2"
                                                           Margin="4,0,0,0">
                                                        <TextBlock Text="{Binding RowCount}" 
                                                                 FontSize="9"
                                                                 FontWeight="SemiBold"
                                                                 Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <TextBlock x:Name="ExtTablesEmptyState"
                                     Text="No tables found"
                                     FontSize="11"
                                     Foreground="{DynamicResource TextTertiaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="32,8"
                                     Visibility="Collapsed"/>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Height="1"
                               Background="{DynamicResource DividerBrush}"
                               Margin="8,18"/>

                        <!-- Analytics Section -->
                        <TextBlock Text="INSIGHTS" 
                                 FontSize="10" 
                                 FontWeight="SemiBold" 
                                 Foreground="{DynamicResource TextTertiaryBrush}" 
                                 Margin="8,0,0,8"/>

                        <RadioButton GroupName="Navigation" 
                                   Style="{StaticResource NavigationRadioButton}"
                                   Tag="Reports" 
                                   Click="NavigationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Reports" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="Navigation" 
                                   Style="{StaticResource NavigationRadioButton}"
                                   Tag="Settings" 
                                   Click="NavigationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>

                <!-- 🟢 STATUS INDICATOR -->
                <Border Grid.Row="2"
                        Style="{StaticResource SidebarCard}"
                        Margin="12,8,12,16"
                        Padding="16"
                        Cursor="Hand"
                        ToolTip="Click to refresh connection status"
                        MouseLeftButtonDown="SystemStatus_Click">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status Icon with Dynamic Background -->
                        <Border Width="32" Height="32" 
               CornerRadius="6">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource StatusDefaultBackgroundBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SystemStatusText}" Value="All systems online">
                                            <Setter Property="Background" Value="{DynamicResource StatusDefaultBackgroundBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SystemStatusText}" Value="Database offline">
                                            <Setter Property="Background" Value="{DynamicResource StatusErrorBackgroundBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SystemStatusText}" Value="Checking connection...">
                                            <Setter Property="Background" Value="{DynamicResource StatusPendingBackgroundBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <!-- Status Dot with Dynamic Color -->
                            <Ellipse Width="8" Height="8" Fill="{Binding SystemStatusColor}"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="System Status" 
                     FontSize="11" 
                     Foreground="{DynamicResource TextSecondaryBrush}" 
                     FontWeight="Medium"/>
                            <TextBlock Text="{Binding SystemStatusText}" 
                     FontSize="10" 
                     Foreground="{Binding SystemStatusColor}" 
                     Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- 🎯 MAIN CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 🔥 NEXT-GEN WORKSPACE HERO -->
            <Border Grid.Row="0"
                    Margin="24,24,24,12"
                    Background="{DynamicResource HeroBackdropBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="22"
                    Padding="32"
                    Effect="{StaticResource SoftCardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Ellipse Fill="{DynamicResource AccentGlowBrush}"
                                 Opacity="0.45"
                                 Width="320"
                                 Height="320"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="-120,-140,0,0"
                                 IsHitTestVisible="False">
                            <Ellipse.Effect>
                                <BlurEffect Radius="80"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,0,6">
                            <TextBlock x:Name="PageTitle"
                                       Text="Tests"
                                       FontSize="26"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Border Style="{StaticResource Badge}"
                                    Margin="14,2,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding RecordCountText}"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Grid.Row="1"
                                   Text="Command center for every automated journey. Coordinate releases, monitor coverage and ship with confidence."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   MaxWidth="520"/>

                        <WrapPanel Grid.Row="2" Margin="0,20,0,0">
                            <Border Style="{StaticResource MetricChip}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🧪" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Smoke suites" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource MetricChip}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🌐" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="5 environments" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource MetricChip}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚙️" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="CI integrated" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <WrapPanel Grid.Row="3" Margin="0,20,0,0">
                            <Border Style="{StaticResource QuickMetricCard}">
                                <StackPanel>
                                    <TextBlock Text="Next run"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="Tomorrow · 08:00"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource QuickMetricCard}">
                                <StackPanel>
                                    <TextBlock Text="Coverage"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="92%"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryBlueBrush}"/>
                                        <TextBlock Text=" ▲ 4.1%"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SuccessBrush}"
                                                   Margin="6,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource QuickMetricCard}">
                                <StackPanel>
                                    <TextBlock Text="Alerts"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="2 pending triage"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </Grid>

                    <!-- Command module -->
                    <StackPanel Grid.Column="1"
                                Margin="28,0,0,0"
                                VerticalAlignment="Stretch">
                        <Border Background="{DynamicResource CardBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="18"
                                Padding="22"
                                Effect="{StaticResource SoftCardShadow}">
                            <StackPanel>
                                <TextBlock Text="Search &amp; control"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox Style="{StaticResource ModernTextBox}"
                                         Margin="0,14,0,0"
                                         x:Name="SearchBox"
                                         TextChanged="SearchBox_TextChanged"
                                         HorizontalAlignment="Stretch"/>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0,18,0,0">
                                    <Button Style="{StaticResource PrimaryButton}"
                                            Padding="14,8"
                                            Click="AddNewTest_Click"
                                            ToolTip="Create a new test with ExtTable">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="➕" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Add test"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Style="{StaticResource SecondaryButton}"
                                            Padding="14,8"
                                            Margin="12,0,0,0"
                                            Click="Refresh_Click"
                                            ToolTip="Refresh data from database">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔄" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Refresh"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Border Height="1"
                                        Background="{DynamicResource DividerBrush}"
                                        Margin="0,20,0,16"/>

                                <TextBlock Text="Smart filters"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <WrapPanel Margin="0,12,0,0">
                                    <Border Style="{StaticResource MetricChip}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔥" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Critical"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource MetricChip}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🕒" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Last 24h"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource MetricChip}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🧭" FontSize="14" Margin="0,0,6,0"/>
                                            <TextBlock Text="Regression"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ✨ TABBED CONTENT AREA -->
            <Border Grid.Row="1"
                    Margin="24,0,24,24"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="18"
                    Padding="0"
                    Effect="{StaticResource SoftCardShadow}">
                <TabControl x:Name="ContentTabControl"
                           Background="Transparent"
                           BorderThickness="0"
                           Padding="0"
                           Margin="12">
                    <!-- Override MahApps TabItem Style Completely -->
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Height" Value="36"/>
                            <Setter Property="AllowDrop" Value="True"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border"
                                               Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               Padding="12,0"
                                               MouseLeftButtonDown="TabItem_MouseLeftButtonDown"
                                               MouseMove="TabItem_MouseMove"
                                               MouseLeftButtonUp="TabItem_MouseLeftButtonUp"
                                               MouseDown="TabItem_MouseDown"
                                               Drop="TabItem_Drop"
                                               DragOver="TabItem_DragOver">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <TextBlock Grid.Column="0"
                                                         x:Name="TabIcon"
                                                         Text="{Binding Tag.Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                                         FontSize="14"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,6,0"/>

                                                <!-- Title -->
                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"
                                                         FontSize="12"
                                                         FontWeight="Medium"
                                                         VerticalAlignment="Center"
                                                         Foreground="{TemplateBinding Foreground}"
                                                         TextTrimming="CharacterEllipsis"
                                                         MaxWidth="180"/>

                                                <!-- Close Button -->
                                                <Button Grid.Column="2"
                                                       x:Name="CloseButton"
                                                       Width="20" Height="18"
                                                       Margin="6,0,0,0"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Cursor="Hand"
                                                       Click="TabCloseButton_Click"
                                                       Visibility="Collapsed">
                                                    <TextBlock Text="✕" 
                                                             FontSize="11"
                                                             Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!-- Show close button on hover or when selected -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                                                <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                                <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="0,2,1,0"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryBlueBrush}"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                    <Condition Property="IsSelected" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.ItemContainerStyle>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</mah:MetroWindow>