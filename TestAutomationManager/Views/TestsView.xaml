<UserControl x:Class="TestAutomationManager.Views.TestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestAutomationManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource PrimaryBackgroundBrush}"
             Loaded="TestsView_Loaded"
             Unloaded="TestsView_Unloaded">

    <UserControl.Resources>
        <!-- 🎯 EXPAND TOGGLE -->
        <Style x:Key="ExpandToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <TextBlock x:Name="Arrow" 
                                     Text="+" 
                                     Foreground="{StaticResource TextTertiaryBrush}" 
                                     FontSize="18"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Arrow" 
                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           To="90" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Arrow" 
                                                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                <Setter TargetName="Arrow" Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 📊 TABLE HEADER -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource BorderBrush}"
                Padding="24,12"
                Margin="24,16,24,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="2" 
                         Text="ID" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimaryBrush}" />

                <TextBlock Grid.Column="3" 
                         Text="TEST NAME" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimaryBrush}" />

                <TextBlock Grid.Column="4" 
                         Text="CATEGORY" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimaryBrush}" />

                <TextBlock Grid.Column="5" 
                         Text="STATUS" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimaryBrush}"/>

                <TextBlock Grid.Column="6" 
                         Text="LAST RUN" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextPrimaryBrush}" />

                <TextBlock Grid.Column="7" 
                         Text="ACTIONS" 
                         FontSize="12" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource TextTertiaryBrush}"
                         HorizontalAlignment="Right"
                         Margin="0,0,8,0"/>
            </Grid>
        </Border>

        <!-- 📋 TEST LIST -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="TestsItemsControl" Margin="24,8,24,24">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- ✨ TEST ROW -->
                                <Border Grid.Row="0" 
                                       Background="{StaticResource CardBackgroundBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Padding="12,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="280"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Expand Toggle -->
                                        <ToggleButton Grid.Column="0" 
                                                    Style="{StaticResource ExpandToggle}"
                                                    IsChecked="{Binding IsExpanded}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>

                                        <!-- Status Indicator -->
                                        <Border Grid.Column="1" 
                                               Width="8" Height="8" 
                                               CornerRadius="4"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Passed">
                                                            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Running">
                                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Not Run">
                                                            <Setter Property="Background" Value="{StaticResource TextTertiaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <!-- ID -->
                                        <TextBlock Grid.Column="2" 
                                                 Text="{Binding Id, StringFormat='#{0}'}" 
                                                 Foreground="{StaticResource TextSecondaryBrush}" 
                                                 FontSize="12" 
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>

                                        <!-- Test Name & Description -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                     Foreground="{StaticResource TextPrimaryBrush}" 
                                                     FontSize="13" 
                                                     FontWeight="Medium"/>
                                            <TextBlock Text="{Binding Description}" 
                                                     Foreground="{StaticResource TextTertiaryBrush}" 
                                                     FontSize="11" 
                                                     Margin="0,2,0,0"
                                                     TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Category -->
                                        <Border Grid.Column="4" 
                                               Background="#9B59B6"
                                               CornerRadius="4" 
                                               Padding="8,4" 
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Category}" 
                                                     Foreground="White" 
                                                     FontSize="10" 
                                                     FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Active Toggle -->
                                        <CheckBox Grid.Column="5" 
                                                IsChecked="{Binding IsActive}" 
                                                Style="{StaticResource ModernToggle}"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="Active" 
                                                     Foreground="{StaticResource TextSecondaryBrush}" 
                                                     FontSize="11" 
                                                     FontWeight="Medium"/>
                                        </CheckBox>

                                        <!-- Last Run -->
                                        <StackPanel Grid.Column="6" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding LastRun, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                     Foreground="{StaticResource TextSecondaryBrush}" 
                                                     FontSize="11" 
                                                     FontWeight="Medium"/>
                                            <TextBlock Text="{Binding LastRun, StringFormat='{}{0:HH:mm}'}" 
                                                     Foreground="{StaticResource TextTertiaryBrush}" 
                                                     FontSize="10" 
                                                     Margin="0,1,0,0"/>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="7" 
          Orientation="Horizontal" 
          HorizontalAlignment="Right"
          VerticalAlignment="Center">
                                            <Button Style="{StaticResource IconButton}" 
          Width="28" Height="28"
          ToolTip="Edit" 
          Margin="2,0"
          Click="EditTest_Click"
          Tag="{Binding}">
                                                <TextBlock Text="✏️" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButton}" 
          Width="28" Height="28"
          ToolTip="Run" 
          Margin="2,0"
          Click="RunTest_Click"
          Tag="{Binding}">
                                                <TextBlock Text="▶️" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButton}" 
          Width="28" Height="28"
          ToolTip="Delete" 
          Margin="2,0"
          Click="DeleteTest_Click"
          Tag="{Binding}">
                                                <TextBlock Text="🗑️" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- 📦 PROCESSES (Expanded) -->
                                <Border Grid.Row="1" Margin="56,8,0,0"
                                      Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl ItemsSource="{Binding Processes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,0,0,6">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Process Row -->
                                                        <Border Grid.Row="0" 
                                                               Background="{StaticResource SecondaryBackgroundBrush}"
                                                               BorderBrush="{StaticResource BorderBrush}"
                                                               BorderThickness="1"
                                                               CornerRadius="6" 
                                                               Padding="12,8">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="28"/>
                                                                    <ColumnDefinition Width="36"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="80"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Expand Toggle -->
                                                                <ToggleButton Grid.Column="0" 
                                                                            Style="{StaticResource ExpandToggle}"
                                                                            IsChecked="{Binding IsExpanded}"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Center"/>

                                                                <!-- Sequence -->
                                                                <Border Grid.Column="1" 
                                                                      Width="24" Height="24" 
                                                                      Background="{StaticResource PrimaryBlueBrush}"
                                                                      CornerRadius="6"
                                                                      Margin="0,0,10,0">
                                                                    <TextBlock Text="{Binding Sequence}" 
                                                                             Foreground="White" 
                                                                             FontWeight="Bold" 
                                                                             FontSize="11"
                                                                             HorizontalAlignment="Center" 
                                                                             VerticalAlignment="Center"/>
                                                                </Border>

                                                                <!-- Name -->
                                                                <TextBlock Grid.Column="2" 
                                                                         Text="{Binding Name}" 
                                                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                                                         FontSize="12" 
                                                                         FontWeight="Medium"
                                                                         VerticalAlignment="Center"/>

                                                                <!-- Critical Badge -->
                                                                <Border Grid.Column="3" 
                                                                      Visibility="{Binding IsCritical, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                      Background="{StaticResource ErrorBrush}"
                                                                      CornerRadius="4" 
                                                                      Padding="6,3" 
                                                                      Margin="0,0,10,0">
                                                                    <TextBlock Text="⚠ CRITICAL" 
                                                                             Foreground="White" 
                                                                             FontSize="9" 
                                                                             FontWeight="Bold"/>
                                                                </Border>

                                                                <!-- Timeout -->
                                                                <Border Grid.Column="4" 
                                                                       Background="{StaticResource CardBackgroundBrush}"
                                                                       BorderBrush="{StaticResource BorderBrush}"
                                                                       BorderThickness="1"
                                                                       CornerRadius="4" 
                                                                       Padding="8,4"
                                                                       Margin="0,0,10,0">
                                                                    <TextBlock Text="{Binding Timeout, StringFormat='⏱ {0}s'}" 
                                                                             Foreground="{StaticResource TextSecondaryBrush}" 
                                                                             FontSize="10" 
                                                                             FontWeight="SemiBold"/>
                                                                </Border>

                                                                <!-- Actions -->
                                                                <StackPanel Grid.Column="5" 
                                                                          Orientation="Horizontal">
                                                                    <Button Style="{StaticResource IconButton}" 
                                                                          Width="26" Height="26"
                                                                          ToolTip="Edit" 
                                                                          Margin="2,0">
                                                                        <TextBlock Text="✏️" FontSize="11"/>
                                                                    </Button>
                                                                    <Button Style="{StaticResource IconButton}" 
                                                                          Width="26" Height="26"
                                                                          ToolTip="Delete" 
                                                                          Margin="2,0">
                                                                        <TextBlock Text="🗑️" FontSize="11"/>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>

                                                        <!-- ⚡ FUNCTIONS (Nested) -->
                                                        <Border Grid.Row="1" Margin="42,6,0,0"
                                                              Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <ItemsControl ItemsSource="{Binding Functions}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Background="#0F1117"
                                                                               BorderBrush="#1E2433"
                                                                               BorderThickness="1"
                                                                               CornerRadius="4" 
                                                                               Padding="10,6" 
                                                                               Margin="0,0,0,4">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="24"/>
                                                                                    <ColumnDefinition Width="200"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="160"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- Icon -->
                                                                                <Border Grid.Column="0" 
                                                                                      Width="18" Height="18" 
                                                                                      Background="#9B59B6"
                                                                                      CornerRadius="4" 
                                                                                      Margin="0,0,8,0">
                                                                                    <TextBlock Text="ƒ" 
                                                                                             Foreground="White" 
                                                                                             FontWeight="Bold" 
                                                                                             FontSize="10"
                                                                                             HorizontalAlignment="Center" 
                                                                                             VerticalAlignment="Center"/>
                                                                                </Border>

                                                                                <!-- Method Name -->
                                                                                <TextBlock Grid.Column="1" 
                                                                                         Text="{Binding MethodName}" 
                                                                                         Foreground="{StaticResource PrimaryBlueBrush}" 
                                                                                         FontFamily="Consolas" 
                                                                                         FontSize="11" 
                                                                                         FontWeight="Medium"
                                                                                         VerticalAlignment="Center"
                                                                                         Margin="0,0,10,0"/>

                                                                                <!-- Parameters -->
                                                                                <TextBlock Grid.Column="2" 
                                                                                         Text="{Binding Parameters}" 
                                                                                         Foreground="{StaticResource TextTertiaryBrush}" 
                                                                                         FontSize="10"
                                                                                         FontFamily="Consolas"
                                                                                         VerticalAlignment="Center"
                                                                                         TextTrimming="CharacterEllipsis"
                                                                                         Margin="0,0,10,0"/>

                                                                                <!-- Expected Result -->
                                                                                <TextBlock Grid.Column="3" 
                                                                                         Text="{Binding ExpectedResult, StringFormat='→ {0}'}" 
                                                                                         Foreground="{StaticResource TextTertiaryBrush}" 
                                                                                         FontSize="10" 
                                                                                         FontStyle="Italic"
                                                                                         VerticalAlignment="Center"
                                                                                         TextTrimming="CharacterEllipsis"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>