                                                    <ColumnDefinition Width="380" SharedSizeGroup="funcDescription"/>
                                                    <ColumnDefinition Width="250" SharedSizeGroup="funcComments"/>
                                                    <ColumnDefinition Width="180" SharedSizeGroup="funcParam1"/>
                                                    <ColumnDefinition Width="180" SharedSizeGroup="funcParam2"/>
                                                    <ColumnDefinition Width="180" SharedSizeGroup="funcParam3"/>
                                                    <ColumnDefinition Width="180" SharedSizeGroup="funcParam4"/>
