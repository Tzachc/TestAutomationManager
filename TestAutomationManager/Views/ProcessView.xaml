                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <ProgressBar x:Name="LoadingProgressBar"
