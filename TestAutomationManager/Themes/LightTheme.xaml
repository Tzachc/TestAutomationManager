<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light theme color palette -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E5EAF1"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryBlueHoverBrush" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="PrimaryRedBrush" Color="#DC2626"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#16A34A"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#EA580C"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#4B5563"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#9CA3AF"/>

    <!-- Control Elements -->
    <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>

    <!-- DataGrid Elements -->
    <SolidColorBrush x:Key="DataGridVerticalGridBrush" Color="#FFD1D5DB"/>
    <SolidColorBrush x:Key="DataGridHorizontalGridBrush" Color="#FFE5E7EB"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="#FFF3F4F6"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#FFF1F5F9"/>
    <SolidColorBrush x:Key="DataGridHeaderBorderBrush" Color="#FFD1D5DB"/>
    <SolidColorBrush x:Key="DataGridHeaderHoverBrush" Color="#FFE5E7EB"/>
    <SolidColorBrush x:Key="DataGridRowHoverBrush" Color="#FFEDF2FF"/>
    <SolidColorBrush x:Key="DataGridRowSelectedBrush" Color="#FFDBEAFE"/>
    <SolidColorBrush x:Key="DataGridRowSelectedForegroundBrush" Color="#111827"/>
    <SolidColorBrush x:Key="DataGridCellBorderBrush" Color="#FFE5E7EB"/>

    <!-- Status Indicator -->
    <SolidColorBrush x:Key="StatusDefaultBackgroundBrush" Color="#DCFCE7"/>
    <SolidColorBrush x:Key="StatusErrorBackgroundBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="StatusPendingBackgroundBrush" Color="#FEF3C7"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#9CA3AF"/>
</ResourceDictionary>
