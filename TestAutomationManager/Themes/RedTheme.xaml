<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Red theme color palette -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1A0D0D"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#220F0F"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2A1212"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#311515"/>
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#331717" Offset="0"/>
        <GradientStop Color="#220F0F" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="HeroBackdropBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3A1919" Offset="0"/>
        <GradientStop Color="#1A0D0D" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#FF4C4C"/>
    <SolidColorBrush x:Key="PrimaryBlueHoverBrush" Color="#FF6666"/>
    <SolidColorBrush x:Key="PrimaryRedBrush" Color="#FF7878"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#4CFF7070"/>
    <SolidColorBrush x:Key="AccentPillBrush" Color="#351818"/>
    <SolidColorBrush x:Key="AccentPillBorderBrush" Color="#FF5C5C"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#66E59A"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF5C5C"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FCA5A5"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#FB7185"/>

    <!-- Control Elements -->
    <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FEE2E2"/>

    <!-- DataGrid Elements -->
    <SolidColorBrush x:Key="DataGridVerticalGridBrush" Color="#33FEE2E2"/>
    <SolidColorBrush x:Key="DataGridHorizontalGridBrush" Color="#22FCA5A5"/>
    <SolidColorBrush x:Key="DataGridAlternatingRowBrush" Color="#11FEE2E2"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="#1AFCA5A5"/>
    <SolidColorBrush x:Key="DataGridHeaderBorderBrush" Color="#33FCA5A5"/>
    <SolidColorBrush x:Key="DataGridHeaderHoverBrush" Color="#33FF6666"/>
    <SolidColorBrush x:Key="DataGridRowHoverBrush" Color="#33FF4C4C"/>
    <SolidColorBrush x:Key="DataGridRowSelectedBrush" Color="#66FF4C4C"/>
    <SolidColorBrush x:Key="DataGridRowSelectedForegroundBrush" Color="#1A0D0D"/>
    <SolidColorBrush x:Key="DataGridCellBorderBrush" Color="#33FCA5A5"/>

    <!-- Status Indicator -->
    <SolidColorBrush x:Key="StatusDefaultBackgroundBrush" Color="#33233F2F"/>
    <SolidColorBrush x:Key="StatusErrorBackgroundBrush" Color="#33FF4C4C"/>
    <SolidColorBrush x:Key="StatusPendingBackgroundBrush" Color="#33F59E0B"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3A1C1C"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#4C2323"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#4C2626"/>

    <!-- Shadow -->
    <Color x:Key="CardShadowColor">#66000000</Color>
</ResourceDictionary>
